{
  "name": "@ui-guys/stencil-bs-ui-lib",
  "private": false,
  "version": "0.0.13",
  "description": "Bootstrap componentes built with StencilJS",
  "engines": {
    "node": ">=8.5.0"
  },
  "main": "dist/index.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "browser": "dist/index.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "stencil build --prerender",
    "dev": "sd concurrent \"stencil build --dev --watch\" \"stencil-dev-server\" ",
    "serve": "stencil-dev-server",
    "start": "npm run dev",
    "test": "jest --no-cache",
    "test.watch": "jest --watch --no-cache",
    "publish": "npm publish ./ --dry-run --access public",
    "serve:heroku": "http-server www"
  },
  "dependencies": {
    "@stencil/core": "0.2.3",
    "@stencil/dev-server": "latest",
    "@stencil/router": "0.0.9",
    "@stencil/utils": "latest",
    "@types/jest": "^21.1.1",
    "@types/video.js": "^6.2.3",
    "ajv": "^6.1.1",
    "bootstrap": "^4.0.0",
    "http-server": "^0.11.1",
    "jest": "^21.2.1",
    "moment": "^2.20.1",
    "pikaday": "^1.7.0",
    "popper.js": "^1.12.9",
    "tooltip.js": "^1.1.7",
    "tslint": "^5.7.0",
    "tslint-config-airbnb": "^5.3.0",
    "video.js": "^6.6.0",
    "videojs-font": "^2.0.0",
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "@stencil/sass": "0.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Uiseguys/stencil-bs-ui-lib.git"
  },
  "author": "wiseguys-admin <admin@uiguys.berlin>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Uiseguys/stencil-bs-ui-lib/issues"
  },
  "homepage": "https://github.com/Uiseguys/stencil-bs-ui-lib",
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}
